%brick.SetColorMode(1, 2);
color = brick.ColorCode(1);
brick.MoveMotor('AB', 50);
brk = true;
while (brk)
    color = brick.ColorCode(1);
    disp(color);
    if(color == 5) %red
        brick.StopAllMotors();
        pause(1);
        brick.MoveMotor('AB', 50);
        brk = false;
    elseif(color == 2) %blue
        pause(2);
        brick.StopAllMotors();
        brick.beep();
        pause(0.5);
        brick.beep();
        brk = false;
    elseif(color == 3) %green
        pause(2);
        brick.StopAllMotors();
        brick.beep();
        pause(0.5);
        brick.beep();
        pause(0.5);
        brick.beep();
        brk = false;
    end
end


